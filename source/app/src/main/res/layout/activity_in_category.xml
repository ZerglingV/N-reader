<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/GreyBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InCategoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/news_items_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/title_toolbar"
        style="@style/BlueToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/button_category_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/button_back"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/title"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:contentDescription="@string/button_title"
            android:src="@drawable/ic_logo" />

    </androidx.appcompat.widget.Toolbar>


</RelativeLayout>